<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-black"
        android:paddingBottom="16dp"
        android:text="Jakou motorku si chcete objednat?"
        android:textAlignment="center"
        android:textColor="#DA291C"
        android:textSize="28sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgMotorcycles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <RadioButton
            android:id="@+id/rbMotorcycle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#DA291C"
            android:checked="true"
            android:fontFamily="sans-serif-medium"
            android:text="Panigale V2"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rbMotorcycle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#DA291C"
            android:fontFamily="sans-serif-medium"
            android:text="Panigale V4"
            android:textColor="#000000"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rbMotorcycle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#DA291C"
            android:fontFamily="sans-serif-medium"
            android:text="Panigale V4 R"
            android:textColor="#000000"
            android:textSize="14sp" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/cbElectricSuspension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#DA291C"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="Elektronický podvozek"
        android:textColor="#555555"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cbSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#DA291C"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="Lepší sedlo"
        android:textColor="#555555"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cbRacingPacket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="#DA291C"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="Závodnický paket"
        android:textColor="#555555"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#DA291C"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="24dp"
        android:paddingTop="12dp"
        android:paddingRight="24dp"
        android:paddingBottom="12dp"
        android:text="Objednat motoyckl"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingTop="16dp"
        android:text="Souhrn objednávky:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivMotorcycle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/panigale_v2" />

</LinearLayout>
